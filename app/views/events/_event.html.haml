= collapse_link "event_details"
= event_title_line(event)
= icon_to "share-alt", event, :title => t(:goto)
%blockquote#event_details.collapse
  = show_for event do |e|
    .row-fluid
      .span6
        = e.attribute :start_date
        = e.attribute :country do
          = country_label(event.country_code)
      .span6
        = e.attribute :end_date
        = e.attribute :url do
          = link_to event.url
    = e.attribute :description
