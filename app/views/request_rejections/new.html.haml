.page-header
  %h1=t "activerecord.state_machines.events.reject"

= simple_form_for @request, :url => request_rejections_path(@request), :html => { :method => :post, :class => 'form-horizontal' } do |f|
  = f.input :tsp_notes
  .form-actions
    = f.button :submit, t("activerecord.state_machines.events.reject"), :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), request_path(@request), :class => 'btn'
